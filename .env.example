# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/marketing_kpi"

# Alternative individual database connection parameters
PGHOST="localhost"
PGPORT="5432"
PGUSER="user"
PGPASSWORD="password"
PGDATABASE="marketing_kpi"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Application Configuration
NODE_ENV="development"
PORT="5000"
FRONTEND_URL="http://localhost:3000"

# Security Configuration
BCRYPT_ROUNDS="12"
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Google Cloud Configuration (for production deployment)
GOOGLE_CLOUD_PROJECT_ID=""
GOOGLE_CLOUD_REGION="us-central1"
GOOGLE_CLOUD_SQL_CONNECTION_NAME=""

# File Upload Configuration
MAX_FILE_SIZE_MB="10"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf,text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE_ENABLED="true"
LOG_FILE_PATH="./logs"

# Redis Configuration (for production caching and session storage)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Email Configuration (for notifications and password reset)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL=""
SMTP_FROM_NAME="Marketing KPI Scorecard"

# API Configuration
API_VERSION="v1"
API_DOCUMENTATION_ENABLED="true"
CORS_ORIGINS="http://localhost:3000,http://localhost:5000"

# Monitoring and Analytics
ENABLE_METRICS="true"
METRICS_PORT="9090"
HEALTH_CHECK_ENABLED="true"

# Feature Flags
ENABLE_FILE_UPLOADS="true"
ENABLE_DATA_EXPORT="true"
ENABLE_BULK_OPERATIONS="true"
ENABLE_REAL_TIME_SYNC="false"

# Development Tools
DEBUG_SQL_QUERIES="false"
ENABLE_QUERY_LOGGING="false"
MOCK_EXTERNAL_SERVICES="false"

# Backup Configuration
DATABASE_BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"

# Performance Configuration
DATABASE_CONNECTION_POOL_MIN="2"
DATABASE_CONNECTION_POOL_MAX="10"
REQUEST_TIMEOUT_MS="30000"
